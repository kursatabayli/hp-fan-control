<MudStack Spacing="4">
    @foreach (var item in _sensors)
    {
        <MudPaper Elevation="0" Outlined="true" Class="pa-4">

            <MudStack Spacing="4">

                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="3">
                    <MudAvatar Variant="Variant.Filled" Color="Color.Surface" Rounded="true" Elevation="2">
                        <MudIcon Icon="@item.Icon" Style="@($"color: {item.DisplayColor}")" />
                    </MudAvatar>
                    <MudText Typo="Typo.h6" Class="fw-bold">@item.Label</MudText>
                </MudStack>

                <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.End">

                    <MudStack Spacing="0">
                        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                            <MudIcon Icon="@Icons.Material.Filled.DeviceThermostat" Color="Color.Secondary"
                                     Size="Size.Small" />
                            <MudText Typo="Typo.caption" Color="Color.Secondary" Class="fw-bold ls-1">
                                TEMPERATURE
                            </MudText>
                        </MudStack>

                        <MudStack Row="true" AlignItems="AlignItems.Start" Spacing="1">
                            <MudText Typo="Typo.h3" Class="fw-bold lh-1" Style="@($"color: {item.DisplayColor}")">
                                @item.Temp
                            </MudText>
                            <MudText Typo="Typo.h6" Color="Color.Secondary" Class="lh-1">Â°C</MudText>
                        </MudStack>
                    </MudStack>

                    <MudStack Spacing="0" AlignItems="AlignItems.End">
                        <MudText Typo="Typo.caption" Color="Color.Secondary" Class="fw-bold ls-1">
                            FAN SPEED
                        </MudText>

                        <MudStack Row="true" AlignItems="AlignItems.Baseline" Spacing="1">
                            <MudText Typo="Typo.h5" Class="fw-bold">
                                @item.Rpm
                            </MudText>
                            <MudText Typo="Typo.caption" Color="Color.Secondary" Class="font-monospace">
                                RPM
                            </MudText>
                        </MudStack>
                    </MudStack>

                </MudStack>
            </MudStack>

        </MudPaper>
    }
</MudStack>