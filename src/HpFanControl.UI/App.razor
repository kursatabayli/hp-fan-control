@page "/"

<MudThemeProvider Theme="@_theme" IsDarkMode="true" />
<MudPopoverProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudMainContent Class="pa-8">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge">
            <MudGrid Spacing="6">

                <MudItem xs="12" md="4" lg="3">
                    <MudStack Spacing="4">

                        <MudPaper Elevation="4" Class="pa-5">
                            <MudStack Spacing="4">
                                <StatusHeader />
                                <MudDivider />
                                <ModeSelector />
                            </MudStack>
                        </MudPaper>

                        <MudText Typo="Typo.overline" Color="Color.Primary" Class="px-2 fw-bold">
                            REAL-TIME SENSORS
                        </MudText>

                        <StatsDisplay />

                    </MudStack>
                </MudItem>

                <MudItem xs="12" md="8" lg="9">
                    <MudPaper Elevation="1" Outlined="true" Class="pa-4 mud-height-full">
                        <FanCurvePanel />
                    </MudPaper>
                </MudItem>

            </MudGrid>
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private MudTheme _theme = new();
    protected override void OnInitialized()
    {
        _theme = new()
        {
            PaletteDark = _darkPalette,
            LayoutProperties = new LayoutProperties() { DefaultBorderRadius = "6px" }
        };
    }


    private readonly PaletteDark _darkPalette = new()
    {
        Primary = "#00E5FF",
        Secondary = "#FF6AD5",
        Background = "#0B0E14",
        Surface = "#1A1D26",
        AppbarBackground = "#0B0E14",
        AppbarText = "#E0E6ED",
        DrawerBackground = "#12151C",
        DrawerText = "#E0E6ED",
        DrawerIcon = "#00E5FF",
        TextPrimary = "#E0E6ED",
        TextSecondary = "#94A3B8",
        TextDisabled = "#475569",
        ActionDefault = "#B4C6EF",
        ActionDisabled = "#334155",
        ActionDisabledBackground = "#1E293B",
        LinesDefault = "#2D3748",
        TableLines = "#2D3748",
        Divider = "#2D3748",
        OverlayLight = "rgba(0, 229, 255, 0.04)",
        Info = "#00E5FF",
        Success = "#00FF9F",
        Warning = "#FFEE58",
        Error = "#FF3131",
        Black = "#050505",
        White = "#FFFFFF"
    };
}